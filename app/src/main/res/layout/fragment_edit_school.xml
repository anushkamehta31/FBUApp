<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profileFragments.EditUsernameFragment">


    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/zm_transparent"
        android:src="@drawable/outline_chevron_left_24"/>

    <TextView
        android:id="@+id/tvDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Done"
        android:layout_margin="10dp"
        android:fontFamily="@font/alata_ref"
        android:textColor="#32B2E4"
        />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:fontFamily="@font/nunito_sans"
        tools:text="anushkamehta"
        android:textSize="15sp"
        android:layout_below="@id/ibBack"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        />

</RelativeLayout>