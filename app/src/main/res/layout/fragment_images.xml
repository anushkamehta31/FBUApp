<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.resources.ImagesFragment">


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:id="@+id/btnAdd"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/zm_transparent"
        android:src="@drawable/outline_add_circle_outline_24"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:id="@+id/btnUploadPhoto"
        android:layout_toEndOf="@id/btnAdd"
        android:backgroundTint="@color/zm_transparent"
        android:src="@drawable/outline_file_upload_24"
        android:layout_alignTop="@id/btnAdd"/>


    <GridView
        android:id="@+id/gvPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnUploadPhoto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:numColumns="3"
        android:padding="5dp"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        />

</RelativeLayout>