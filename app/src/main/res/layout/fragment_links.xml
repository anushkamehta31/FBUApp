<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".fragments.resources.LinksFragment">

    <TextView
        android:id="@+id/tvLinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Links"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="@font/alata_ref"/>


    <ImageButton
        android:layout_width="30dp"
        android:id="@+id/btnAddLink"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/outline_add_24"
        android:backgroundTint="@color/zm_transparent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLinks"
        android:layout_margin="10dp"/>

</RelativeLayout>